<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="Selenium Test Suite" parallel="tests" thread-count="3">
    <test name="Title Verification Tests with Chrome">
        <parameter name="browser" value="chrome"/>
        <classes>
            <class name="io.learn.cross_browser.CrossBrowserTests2"/>
        </classes>
    </test>
    <test name="Title Verification Tests with Edge">
        <parameter name="browser" value="edge"/>
        <classes>
            <class name="io.learn.cross_browser.CrossBrowserTests2"/>
        </classes>
    </test>
    <test name="Title Verification Tests with Firefox">
        <parameter name="browser" value="firefox"/>
        <classes>
            <class name="io.learn.cross_browser.CrossBrowserTests2"/>
        </classes>
    </test>
</suite>